{
    "private": true,
    "name": "ts-ast-parser",
    "author": "Jordi Marimon Palarea",
    "description": "Simplifies TypeScript AST for generating documentation",
    "homepage": "https://jordimarimon.github.io/ts-ast-parser",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jordimarimon/ts-ast-parser.git"
    },
    "bugs": {
        "url": "https://github.com/jordimarimon/ts-ast-parser/issues"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "start": "npm-run-all -p dev:*",
        "build": "tsc --build packages/${PACKAGE:-*}/tsconfig.build.json",
        "doc": "npm-run-all clear:doc -p build:*",
        "build:11ty": "NODE_ENV=production eleventy",
        "build:css": "postcss docs/assets/css/main.css -o _site/assets/css/main.css",
        "dev:11ty": "eleventy --serve",
        "dev:css": "postcss docs/assets/css/main.css -o _site/assets/css/main.css --watch",
        "deploy:doc": "gh-pages -d _site -m \"docs: update documentation\"",
        "test": "vitest run --config vitest.config.ts",
        "coverage": "vitest run --coverage --config vitest.config.ts",
        "prepare": "./scripts/prepare.sh",
        "upgrade": "rm -rf node_modules package-lock.json && npm i",
        "bump": "npx ncu -u -x typescript,@types/node,@typescript/lib-dom",
        "lint": "eslint \"**/*.ts\" --max-warnings 0",
        "lint:fix": "eslint \"**/*.ts\" --fix --cache --max-warnings 0",
        "analyse": "source-map-explorer ./dist/**.js",
        "clear:doc": "rm -rf ./_site"
    },
    "lint-staged": {
        "**/*.ts": "npm run lint:fix"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.0.3",
        "@types/node": "~18.7.3",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "@typescript/lib-dom": "npm:@types/web@^0.0.72",
        "@vitest/coverage-c8": "^0.22.1",
        "ace-builds": "^1.9.6",
        "autoprefixer": "^10.4.8",
        "c8": "^7.12.0",
        "chalk": "^5.0.1",
        "comment-parser": "^1.3.1",
        "cssnano": "^5.1.13",
        "esbuild": "^0.15.5",
        "eslint": "^8.22.0",
        "eslint-import-resolver-typescript": "^3.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-sonarjs": "^0.15.0",
        "gh-pages": "^4.0.0",
        "globby": "^13.1.2",
        "jsoneditor": "^9.9.0",
        "lint-staged": "^13.0.3",
        "luxon": "^3.0.3",
        "mdast-builder": "^1.1.1",
        "mdast-util-gfm": "^2.0.1",
        "mdast-util-to-markdown": "^1.3.0",
        "npm-check-updates": "^16.1.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "postcss-cli": "^10.0.0",
        "postcss-import": "^15.0.0",
        "postcss-preset-env": "^7.8.0",
        "reflect-metadata": "^0.1.13",
        "source-map-explorer": "^2.5.2",
        "tailwindcss": "^3.1.8",
        "tailwindcss-logical": "^3.0.0",
        "tslib": "^2.4.0",
        "typescript": "^4.8.2",
        "vite-tsconfig-paths": "^3.5.0",
        "vitest": "^0.22.1"
    }
}
