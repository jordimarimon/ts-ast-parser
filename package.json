{
    "name": "ts-ast-parser",
    "version": "0.0.0",
    "author": "Jordi Marimon Palarea",
    "description": "Simplifies TypeScript AST for generating documentation",
    "homepage": "https://jordimarimon.github.io/ts-ast-parser",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jordimarimon/ts-ast-parser.git"
    },
    "bugs": {
        "url": "https://github.com/jordimarimon/ts-ast-parser/issues"
    },
    "keywords": [
        "TypeScript",
        "AST",
        "Abstract Syntax Tree",
        "Documentation",
        "doc"
    ],
    "files": [
        "dist/",
        "LICENSE",
        "README.md"
    ],
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "build": "tsc --build packages/${PACKAGE:-*}/tsconfig.json",
        "build:doc": "npm run clear:doc && NODE_ENV=production eleventy",
        "dev:doc": "eleventy --serve",
        "deploy:doc": "gh-pages -d _site -m \"docs: update documentation\"",
        "test": "vitest run --config vitest.config.ts",
        "coverage": "vitest run --coverage --config vitest.config.ts",
        "prepare": "./scripts/prepare.sh",
        "upgrade": "rm -rf node_modules package-lock.json && npm i",
        "bump": "npx ncu -u -x typescript,@types/node,@typescript/lib-dom",
        "lint": "eslint \"**/*.{ts,js}\" --max-warnings 0",
        "lint:fix": "eslint \"**/*.{ts,js}\" --fix --cache --max-warnings 0",
        "analyse": "source-map-explorer ./dist/**.js",
        "clear:doc": "rm -rf ./_site"
    },
    "lint-staged": {
        "**/*.{js,ts}": "npm run lint:fix"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.1",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@types/node": "~16.11.25",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@typescript/lib-dom": "npm:@types/web@^0.0.70",
        "c8": "^7.12.0",
        "chalk": "^5.0.1",
        "comment-parser": "^1.3.1",
        "eslint": "^8.20.0",
        "eslint-import-resolver-typescript": "^3.3.0",
        "gh-pages": "^4.0.0",
        "globby": "^13.1.2",
        "lint-staged": "^13.0.3",
        "mdast-builder": "^1.1.1",
        "mdast-util-gfm": "^2.0.1",
        "mdast-util-to-markdown": "^1.3.0",
        "npm-check-updates": "^16.0.3",
        "npm-run-all": "^4.1.5",
        "source-map-explorer": "^2.5.2",
        "tslib": "^2.4.0",
        "typescript": "~4.7.4",
        "vite-tsconfig-paths": "^3.5.0",
        "vitest": "^0.19.1"
    }
}
